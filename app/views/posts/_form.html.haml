= form_for @post do |f|
  -if @post.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  = link_to 'Link', '#', :class => 'text_link_toggle' 
  \/
  = link_to 'Text', '#', :class => 'text_link_toggle'
  .field
    = f.label :name, 'Title'
    %br/
    = f.text_field :name
  .field.text_link
    = f.label :url, 'Website Link'
    %br/
    = f.text_field :url
  .field.text_link{:style => "display: none;"}
    = f.label :text
    %br/
    = f.text_area :text
  .field
    = f.label :category
    %br/
    = f.text_field :category
  .actions
    = f.submit 'Save'
