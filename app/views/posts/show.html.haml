%p
  %b Name:
  = @post.name
%p
  - if @post.is_link == true
    %b Url:
    = link_to @post.is_a_sexy_link, @post.url
  - else
    %b Text:
    =h @post.text
  
.clear
.grid_7
- form_for [@commentable, Comment.new] do |f|
  =h f.label :text, 'Comment'
  %br/
  =h f.text_area :text, :style => "height: 100px;"
  %br/
  = f.submit "Submit"
.clear
%br/
%p
  Things people say :
.clear
.grid_7
  = render :partial => 'comment', :collection => @comments


